        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 2rem;
        margin: 4rem 0;
    }

    .step-card {
        background: white;
        padding: 2rem;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.08);
        text-align: center;
        transition: transform 0.3s ease;
    }

        .step-card:hover {
            transform: translateY(-5px);
        }

    .step-icon {
        width: 60px;
        height: 60px;
        background: #fce4e1;
        border-radius: 50%;
        margin: 0 auto 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .step-icon i {
            color: #e74c3c;
            font-size: 1.5rem;
        }

    .timing-box {
        margin: 2rem 0;
    }

    .timing-display {
        padding: 1.5rem;
        border-radius: 10px;
        background: #f8f9fa;
        display: inline-block;
    }

        .timing-display.break {
            background: #e8f4fc;
            border: 2px solid #3498db;
        }

    .time {
        display: block;
        font-size: 2rem;
        font-weight: bold;
        color: #e74c3c;
    }

    .break .time {
        color: #3498db;
    }

    .label {
        color: #666;
        font-size: 0.9rem;
    }

    .cycle-box {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1.5rem;
        margin: 2rem 0;
    }

    .pom-counter {
        font-size: 2.5rem;
        font-weight: bold;
        color: #e74c3c;
    }

    .long-break {
        text-align: center;
    }

    .benefits-section {
        margin: 4rem 0;
        text-align: center;
    }

    .benefits-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
    }

    .benefit-card {
        padding: 2rem;
        background: white;
        border-radius: 10px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
    }

        .benefit-card i {
            font-size: 2rem;
            color: #e74c3c;
            margin-bottom: 1rem;
        }

    @@media (max-width: 768px) {
        .pomodoro-guide {
            padding: 2rem 1rem;
        }

        .guide-header h1 {
            font-size: 2rem;
        }
    }

