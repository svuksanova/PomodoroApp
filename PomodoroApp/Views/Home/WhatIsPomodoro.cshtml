@{
    ViewData["Title"] = "What is Pomodoro?";
}

<div class="pomodoro-guide">
    <div class="guide-header">
        <h1>The Pomodoro Technique</h1>
        <p class="lead">Master Your Time, Boost Your Productivity</p>
    </div>

    <div class="technique-hero">
        <img src="/images/image1.webp" alt="Pomodoro Technique Infographic" class="technique-infographic">
        <div class="hero-caption">Developed by Francesco Cirillo in the late 1980s</div>
    </div>

    <div class="pomodoro-steps">
        <!-- Step 1 -->
        <div class="step-card">
            <div class="step-header">
                <div class="step-number">1</div>
                <h3>Plan Your Tasks</h3>
            </div>
            <div class="step-content">
                <div class="time-display">
                    <i class="fas fa-clipboard-list"></i>
                </div>
                <p>Break work into 25-minute intervals. Estimate required Pomodoros.</p>
            </div>
        </div>

        <!-- Step 2 -->
        <div class="step-card highlight">
            <div class="step-header">
                <div class="step-number">2</div>
                <h3>Focus Session</h3>
            </div>
            <div class="step-content">
                <div class="time-display focus">
                    <span>25:00</span>
                    <small>Focused Work</small>
                </div>
                <p>Work distraction-free. No multitasking!</p>
            </div>
        </div>

        <!-- Step 3 -->
        <div class="step-card">
            <div class="step-header">
                <div class="step-number">3</div>
                <h3>Take a Break</h3>
            </div>
            <div class="step-content">
                <div class="time-display break">
                    <span>05:00</span>
                    <small>Mental Reset</small>
                </div>
                <p>Step away, stretch, hydrate, or relax.</p>
            </div>
        </div>

        <!-- Step 4 -->
        <div class="step-card">
            <div class="step-header">
                <div class="step-number">4</div>
                <h3>Repeat & Recharge</h3>
            </div>
            <div class="step-content">
                <div class="cycle-display">
                    <div class="pom-counter">4×</div>
                    <div class="long-break">
                        <span>15-30</span>
                        <small>Extended Break</small>
                    </div>
                </div>
                <p>After 4 Pomodoros, take a longer break.</p>
            </div>
        </div>
    </div>

    <div class="benefits-section">
        <h2>Why It Works</h2>
        <div class="benefits-grid">
            <div class="benefit-card">
                <i class="fas fa-brain"></i>
                <h3>Fights Mental Fatigue</h3>
                <p>Regular breaks maintain peak cognitive performance</p>
            </div>
            <div class="benefit-card">
                <i class="fas fa-bolt"></i>
                <h3>Boosts Motivation</h3>
                <p>Short deadlines create productive urgency</p>
            </div>
            <div class="benefit-card">
                <i class="fas fa-chart-line"></i>
                <h3>Tracks Progress</h3>
                <p>Visible completion of Pomodoros builds momentum</p>
            </div>
        </div>
    </div>
</div>

<style>
    /* Add to existing CSS */
    .pomodoro-guide {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem 2rem;
    }

    .guide-header {
        text-align: center;
        margin-bottom: 3rem;
    }

        .guide-header h1 {
            color: #e74c3c;
            font-size: 2.8rem;
            margin-bottom: 1rem;
        }

        .guide-header .lead {
            color: #666;
            font-size: 1.2rem;
            max-width: 800px;
            margin: 0 auto;
        }

    .technique-hero {
        margin: 3rem 0;
        text-align: center;
    }

    .technique-infographic {
        max-width: 800px;
        width: 100%;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        margin: 0 auto;
    }

    .hero-caption {
        color: #666;
        font-size: 0.9rem;
        margin-top: 1rem;
        font-style: italic;
    }

