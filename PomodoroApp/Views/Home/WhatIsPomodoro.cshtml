        text-align: center;
    }

        .time-display.focus {
            background: #fce4e1;
            border: 2px solid #e74c3c;
        }

        .time-display.break {
            background: #e8f4fc;
            border: 2px solid #3498db;
        }

        .time-display span {
            display: block;
            font-size: 1.5rem;
            font-weight: bold;
            color: #2c3e50;
        }

    .cycle-display {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
    }

    .pom-counter {
        font-size: 1.8rem;
        font-weight: bold;
        color: #e74c3c;
    }

    .long-break span {
        color: #3498db;
        font-weight: 600;
    }

    @@media (max-width: 1200px) {
        .pomodoro-steps

    {
        grid-template-columns: 1fr;
        max-width: 600px;
        margin: 0 auto;
    }

    .step-card {
        margin-bottom: 1.5rem;
    }

    }
</style>

